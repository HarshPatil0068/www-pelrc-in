    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1 data-animate="fade-up">Internships & Workshops That Empower
                Careers</h1>
            <p class="subtitle" data-animate="fade-up"
                data-animate-delay="0.3s">Skill-based hands-on training in tech,
                engineering, and design.</p>
            <div class="hero-buttons">
                <a href="#internships" class="primary-button"
                    data-animate="fade-left" data-animate-delay="0.6s">Explore
                    Internships</a>
                <a href="#workshops" class="secondary-button"
                    data-animate="fade-right" data-animate-delay="0.6s">View
                    Workshops</a>
            </div>
        </div>
        <div class="scroll-down">
            <i class="fas fa-chevron-down"></i>
        </div>
