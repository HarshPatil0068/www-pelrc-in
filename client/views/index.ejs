        <!-- Navigation Bar -->
        <nav class="navbar">
            <div class="container">
                <a href="/" class="logo">PELRC</a>
                <div class="nav-links">
                    <a href="#services">Technical Manuals</a>
                    <a href="#internships">Internships</a>
                    <a href="#workshops">Workshops</a>
                    <a href="/about">About</a>
