        </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="services">
        <div class="container">
            <h2 class="section-title" data-animate="fade-up">What We Offer</h2>
            <div class="services-grid">
                <div class="service-card" data-animate="fade-up"
                    data-animate-delay="0.2s">
                    <div class="service-icon">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <h3>Paid Internships</h3>
                    <p>3-6 month immersive programs with real-world projects and
                        mentorship.</p>
                    <button onclick="showPopup(0)" class="learn-more">Learn more →</button>
                </div>
                <div class="service-card" data-animate="fade-up"
                    data-animate-delay="0.4s">
                    <div class="service-icon">
                        <i class="fas fa-chalkboard-teacher"></i>
                    </div>
                    <h3>Weekend Workshops</h3>
                    <p>Intensive 2-day sessions focused on practical,
                        industry-relevant skills.</p>
                    <button onclick="showPopup(1)" class="learn-more">Learn more →</button>
                </div>
                <div class="service-card" data-animate="fade-up"
                    data-animate-delay="0.6s">
                    <div class="service-icon">
                        <i class="fas fa-briefcase"></i>
                    </div>
                    <h3>Career Accelerator</h3>
                    <p>Portfolio reviews, interview prep, and connections to
                        hiring partners.</p>
                    <button onclick="showPopup(2)" class="learn-more">Learn more →</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Internship Program Section -->
    <section id="internships" class="internship-program">
        <div class="container">
            <h2 class="section-title" data-animate="fade-up">Our Internship
                Programs</h2>
            <p class="section-subtitle" data-animate="fade-up"
                data-animate-delay="0.2s">16-week immersive programs with real
                client projects and mentorship</p>

            <div class="internship-grid">
                <!-- card 1. -->
                <div class="internship-card" data-animate="fade-up"
                    data-animate-delay="0.3s">
                    <div class="internship-icon">
                        <i class="fas fa-code"></i>
                    </div>
                    <h3><a href="web-development-internship.html">Web
                            Development</a></h3>
                    <p>Master frontend, backend, or full stack development with
                        modern frameworks.</p>
                    <div class="internship-details">
                        <span><i class="fas fa-clock"></i> 2 weeks</span>
                        <span><i class="fas fa-rupee-sign"></i> 15K/month</span>
                    </div>
                    <div class="apply-button-container">
                        <button onclick><a href="/webDevelopmentInternship"
                                class="primary-button">Apply Now</a></button>
                    </div>
                </div>
                <!-- Card 2. -->
                <div class="internship-card" data-animate="fade-up"
                    data-animate-delay="0.5s">
                    <div class="internship-icon">
                        <i class="fas fa-cogs"></i>
                    </div>
                    <h3><a href="internship.html">Mechanical
                            Engineering</a></h3>
                    <p>Practical CAD, simulation, and product design experience
                        with industry tools.</p>
                    <div class="internship-details">
                        <span><i class="fas fa-clock"></i> 2 weeks</span>
                        <span><i class="fas fa-rupee-sign"></i> 10K/month</span>
                    </div>
                    <div class="apply-button-container">
                            <a href="/mechanicalInternship" class="primary-button">Apply
                                Now</a>
                        </div>
                    </div>
                    <!-- Card 3. -->
                    <div class="internship-card" data-animate="fade-up"
                        data-animate-delay="0.6s">
                        <div class="internship-icon">
                            <i class="fas fa-paint-brush"></i>
                        </div>
                        <h3><a href="ui-ux-internship.html">UI/UX & Graphic
                                Design</a></h3>
                        <p>Learn user-centered design, prototyping, and visual
                            communication.</p>
                        <div class="internship-details">
                            <span><i class="fas fa-clock"></i> 16 weeks</span>
                            <span><i class="fas fa-rupee-sign"></i>
                                12K/month</span>
                        </div>
                        <div class="apply-button-container">
                            <a href="/userInterfaceInternShip"
                                class="primary-button">Apply Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Testimonials Section -->
